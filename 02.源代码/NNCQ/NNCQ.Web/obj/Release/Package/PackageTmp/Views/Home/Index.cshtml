@{
    Layout = "~/Views/Shared/_LayoutNncq.cshtml";
}

<form name="myForm" id="myForm" action="../../Home/Upload" method="POST" enctype="multipart/form-data">
    <input type="file" id="browseBox" name="file1" />
    <a href="javascript:Test()">uuuu</a>
</form>

<div id="uploadTips">
    <img src="~/Images/CodeOnScreen.gif" />
</div>

@section Scripts {
    <script>

        function Test() {
            var options = {
                async: false,
                type: "post",
                success: uploadSuccessful,
                error: uploadError
            }

            $("#myForm").ajaxSubmit(options);
        }

        function upload() {
            var options = {
                async: false,
                type:"post",
                success: uploadSuccessful,
                error: uploadError
            }

            $("#myForm").ajaxSubmit(options);
            return false;
        }

        function uploadSuccessful(data) {
            document.getElementById('uploadTips').innerHTML = data;
            //alert(data);
        }

        function uploadError(jqXHR, textStatus, err) {
            alert(jqXHR.responseText);
        }

    </script>
}
